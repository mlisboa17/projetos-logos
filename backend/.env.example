# LOGOS Backend - Environment Variables
# Copie este arquivo para .env e preencha com seus dados reais

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/logos_db

# JWT Secret (gere uma chave aleatória forte)
SECRET_KEY=sua_chave_secreta_aqui_minimo_32_caracteres_aleatorios

# WebPostos API (Postos Lisboa)
WEBPOSTOS_API_URL=https://api.webpostos.com.br
WEBPOSTOS_USERNAME=postos.lisboa
WEBPOSTOS_PASSWORD=sua_senha
WEBPOSTOS_API_KEY=sua_chave_api

# Vibra (preços combustíveis)
VIBRA_USERNAME=seu_usuario
VIBRA_PASSWORD=sua_senha

# SMTP (email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_app

# Environment
ENVIRONMENT=development
DEBUG=True
